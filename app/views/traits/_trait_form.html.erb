<div class="container border text-center py-md-2 mt-4">
  
  <%= form_with  model: @trait  do |form| %>

  <div class="field row py-md-2">
     
    <%= form.label :name , :class => 'col-sm-3 '%>
    <%= form.text_field :name, :class => 'col-sm-6 ' %>
    <div class="actions col-sm-2 ">
      <%= form.submit :"Add Trait", class:"btn btn-block btn-danger" %>
    </div>
  </div>
  <% end %>
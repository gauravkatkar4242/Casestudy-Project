<div class="container border text-center py-md-2 mt-4">
  
  <%= form_with  model: response, url: casestudy_user_user_response_path(@casestudy_user,response) do |form| %>

  <div class="field row py-md-2">
     
    <%= form.label :Answer , :class => 'col-sm-3 '%>
    <%= form.text_field :response, :class => 'col-sm-6 ' %>
    <div class="actions col-sm-2 ">
      <%= form.submit :"Save Answer", class:"btn btn-block btn-danger" %>
    </div>
  </div>
  <% end %>
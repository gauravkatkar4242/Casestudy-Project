
<div class="container border text-center py-md-2 mt-4">
  
  <h4>ADD PAGE </h4>

  <%= form_with  model:([ @casestudy, @casestudy.pages.new])  do |form| %>

  <div class="field row py-md-2">
     
    <%= form.label :Page_body , :class => 'col-sm-3 '%>
    <%= form.text_area :body, rows: 4, :class => 'col-sm-6 ' %>
    <div class="actions col-sm-2 ">
      <%= form.submit :"Create Page", class: "btn btn-success"%>
    </div>
  </div>
  <% end %>

</div>